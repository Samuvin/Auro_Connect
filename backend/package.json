{
  "name": "linkedin-clone-backend",
  "version": "1.0.0",
  "description": "Backend API for LinkedIn clone",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:snapshot": "jest --testNamePattern=@snapshot --verbose",
    "test:snapshot:update": "jest --testNamePattern=@snapshot --updateSnapshot",
    "test:snapshot:ci": "jest --testNamePattern=@snapshot --coverage=false --watchAll=false --verbose",
    "test:snapshot:watch": "jest --testNamePattern=@snapshot --watch",
    "test:integration": "jest tests/integration/ --verbose",
    "test:integration:watch": "jest tests/integration/ --watch",
    "test:integration:ci": "jest tests/integration/ --coverage=false --watchAll=false --verbose",
    "test:integration:ts": "jest tests/integration/*.ts --verbose",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "dev": "nodemon server.js",
    "start": "node server.js"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mailtrap": "^3.4.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "mongoose": "^8.6.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@eslint/js": "^9.32.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/supertest": "^2.0.12",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^3.1.4",
    "supertest": "^6.3.3",
    "typescript": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.test.ts",
      "<rootDir>/**/__tests__/**/*.js",
      "<rootDir>/**/__tests__/**/*.ts"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "middleware/**/*.js",
      "models/**/*.js",
      "lib/**/*.js",
      "!server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 15000,
    "detectOpenHandles": true,
    "forceExit": true,
    "maxWorkers": 1,
    "transform": {
      "^.+\\.(js|ts)$": [
        "babel-jest",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": "current"
                }
              }
            ],
            "@babel/preset-typescript"
          ]
        }
      ]
    },
    "moduleFileExtensions": ["js", "ts"]
  }
}
